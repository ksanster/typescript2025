{
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["es2021", "dom", "esnext.decorators"],
    "types": ["node"],
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "node",

    "allowJs": true,

    "outDir": "./dist",

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,

    "skipLibCheck": true
  }
}
