{
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["es2021", "esnext", "dom"],

    "module": "ES6",
    "rootDir": "./src",
    "moduleResolution": "node",

     "allowJs": true,

    "outDir": "./dist",

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,

    "skipLibCheck": true
  }
}
